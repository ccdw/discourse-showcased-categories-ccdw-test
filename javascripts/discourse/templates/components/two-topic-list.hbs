{{#if showTopicLists}}
  {{plugin-outlet
    name="above-discourse-showcased-categories"
    tagName=""
    connectorTagName="div"
  }}

  <div class="wrap custom-homepage-columns">
    {{! Two column homepage feed }}
    {{showcased-topic-list
      category=category1
      classNames="col col-1"
      title=(theme-setting "feed_one_title")
      catId="cat1Showcase"
    
    }}
    {{showcased-topic-list
      category=category2
      classNames="col col-2"
      title=(theme-setting "feed_two_title")
      catId="cat2Showcase"
    }}
  </div>
{{/if}}
